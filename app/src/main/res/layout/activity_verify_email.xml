<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyEmail">

    <TextView
        android:id="@+id/verify_code"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="145dp"
        android:text="Verification Code"
        android:fontFamily="@font/convergence"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instru_code"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_code"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/convergence"
        android:text="Please put code verification from Email"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <com.chaos.view.PinView
        android:id="@+id/pin_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instru_code"
        app:itemCount="6"
        app:itemWidth="50dp"
        app:itemHeight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        app:lineColor="@color/colorPrimaryDark"
        android:background="@color/colorWhite"
        style="@style/PinWidget.PinView"
        android:inputType="number"
        android:cursorVisible="true"
        app:itemRadius="4dp"
        app:cursorColor="@android:color/darker_gray" />


    <android.widget.Button
        android:id="@+id/verify_code_btn"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/pin_view"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="49dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borde_redondo_tweet"
        android:elevation="5dp"
        android:fontFamily="@font/convergence"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>